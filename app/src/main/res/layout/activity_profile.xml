<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="16dp">

        <!-- Avatar -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatarImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/avatar"
            android:contentDescription="User Avatar"
            tools:ignore="HardcodedText" />

        <!-- Name and Email -->
        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lê Việt My"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="my.le@gmail.com"
            android:textSize="14sp"
            android:textColor="#666666"
            tools:ignore="HardcodedText" />

        <!-- Stats (Điểm số, Đánh giá, Yêu thích) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/pointsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm: 24"
                android:textColor="#FF4081"
                android:layout_marginEnd="16dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/ratingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đánh giá: 12"
                android:textColor="#FF4081"
                android:layout_marginEnd="16dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/favoriteTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yêu thích: 8"
                android:textColor="#FF4081"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>

    <!-- Product List Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sản phẩm đã lưu"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        tools:ignore="HardcodedText" />

    <!-- Thêm danh sách sản phẩm (có thể dùng RecyclerView) -->

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/settingsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cài đặt tài khoản"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="#000000"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/exchangeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đổi khoán sử dụng"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="#000000"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/reviewTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đánh giá sản phẩm"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="#000000"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/logoutTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng xuất"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="#000000"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>